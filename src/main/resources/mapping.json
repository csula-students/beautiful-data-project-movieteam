#Creating the index for elastic search and kibana
DELETE beautiful-movie-team-data

#create mapping
PUT /beautiful-movie-team-data
{
    "mappings" : {
        "movies" : {
            "properties" : {
                "title" : {
                    "type" : "string",
                    "index" : "not_analyzed"
                },
                "date": {
                    "type": "date"
                }
            }
        },
        "tweets" : {
          "properties": {
            "text" : {
              "type" : "string",
              "index" : "not_analyzed"
            },
          "date": {
            "type": "date"
          }
        }
      }
    }
}

#get movies mapping
GET beautiful-movie-team-data/movies/_mapping

#get tweets mapping
GET beautiful-movie-team-data/tweets/_mapping

#search for movies
GET beautiful-movie-team-data/movies/_search

#search for tweets
GET beautiful-movie-team-data/tweets/_search





